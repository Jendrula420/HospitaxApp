@model HospitaxApp.Models.Protokoly

@{
    ViewBag.Title = "Edit";
}

<h2>Wypełnij</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ProtokolyID)

    <div class="form-group">
        @Html.LabelFor(model => model.Kurs, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Kurs, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Kurs, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ProwadzacyID, "Prowadzacy", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ProwadzacyID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProwadzacyID, "", new { @class = "text-danger" })
        </div>
    </div>
    
    @foreach (var item in Model.Ankieties)
    {
        <div class="form-group">
            @Html.LabelFor(model => item.Pytanie, item.Pytanie , htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => item.Ocena, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => item.Ocena, "", new { @class = "text-danger" })
            </div>
        </div>
    }
    
    @foreach (var item in Model.OcenySlownes)
    {
        <div class="form-group">
            @Html.LabelFor(model => item.Pytanie, item.Pytanie , htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => item.Odpowiedz, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => item.Odpowiedz, "", new { @class = "text-danger" })
            </div>
        </div>
    }


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Zapisz" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Wróć", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
